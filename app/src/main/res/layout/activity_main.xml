<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/listaPusta"
        android:layout_width="208dp"
        android:layout_height="232dp"
        android:layout_above="@+id/navigation_view"
        android:layout_below="@+id/obraz"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="91dp"
        android:layout_marginBottom="147dp"
        android:background="#FFFFFF"
        android:text="Stwórz swoją pierwszą listę, zaplanuj zakupy szybciej i wygodniej"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/obraz"
        android:layout_width="166dp"
        android:layout_height="127dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="118dp"
        android:layout_marginTop="59dp"
        android:layout_marginEnd="120dp"
        android:src="@drawable/listka" />

    <ImageButton
        android:id="@+id/dodajListe"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/navigation_view"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="210dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="41dp"
        android:background="#FFFFFF"
        android:src="@drawable/plusik" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemIconTint="@color/colorAccent"
        app:itemTextColor="#970E0E"
        app:menu="@menu/nav_menu" />


</RelativeLayout>